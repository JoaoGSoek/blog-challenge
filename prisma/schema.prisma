generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --- ENUMS ---
enum ProfileStatus {
  PUBLIC
  PRIVATE
}

enum PostStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

enum MediaType {
  IMAGE
  VIDEO
}

enum ReactionType {
  LIKE
  LOVE
  HAHA
  SAD
  ANGRY
}

// --- MODELS ---

model User {
  id            Int           @id @default(autoincrement())
  profilePicId  Int?
  username      String        @unique
  password      String
  email         String        @unique
  profileStatus ProfileStatus @default(PUBLIC)

  posts     Post[]
  comments  Comment[]
  reactions Reaction[]
  media     Media[]

  followers Follower[] @relation("UserFollowers")
  following Follower[] @relation("UserFollowing")

  profilePic Media? @relation("UserProfilePic", fields: [profilePicId], references: [id])
}

model Follower {
  id         Int  @id @default(autoincrement())
  followerId Int
  follower   User @relation("UserFollowing", fields: [followerId], references: [id])
  followedId Int
  followed   User @relation("UserFollowers", fields: [followedId], references: [id])

  @@unique([followerId, followedId])
}

model Post {
  id            Int        @id @default(autoincrement())
  userId        Int
  status        PostStatus @default(PUBLISHED)
  title         String?
  content       String?
  
  // Timestamps solicitados
  postTimestamp DateTime   @default(now())
  editTimestamp DateTime?   @updatedAt

  user      User       @relation(fields: [userId], references: [id])
  comments  Comment[]
  reactions Reaction[]
  
  // Nova relação n:n com Media via PostMedia
  postMedia PostMedia[]
}

model Media {
  id     Int       @id @default(autoincrement())
  userId Int
  type   MediaType
  blob   String

  user             User        @relation(fields: [userId], references: [id])
  usedAsProfilePic User[]      @relation("UserProfilePic")
  
  // Nova relação n:n com Post via PostMedia
  postMedia        PostMedia[]
}

// Tabela intermediária explícita (n:n)
model PostMedia {
  id      Int @id @default(autoincrement())
  postId  Int
  mediaId Int

  post  Post  @relation(fields: [postId], references: [id], onDelete: Cascade)
  media Media @relation(fields: [mediaId], references: [id], onDelete: Cascade)

  @@unique([postId, mediaId]) // Garante que a mesma mídia não seja vinculada duas vezes ao mesmo post
}

model Comment {
  id        Int    @id @default(autoincrement())
  userId    Int
  postId    Int
  content   String
  
  // Timestamps solicitados
  postTimestamp DateTime @default(now())
  editTimestamp DateTime @updatedAt

  // Auto-relacionamento 1:n (Thread de comentários)
  emitterId Int?
  parent    Comment?  @relation("CommentThread", fields: [emitterId], references: [id])
  replies   Comment[] @relation("CommentThread")

  user      User       @relation(fields: [userId], references: [id])
  post      Post       @relation(fields: [postId], references: [id])
  reactions Reaction[]
}

model Reaction {
  id        Int          @id @default(autoincrement())
  userId    Int
  postId    Int?
  commentId Int?
  type      ReactionType

  user    User     @relation(fields: [userId], references: [id])
  post    Post?    @relation(fields: [postId], references: [id])
  comment Comment? @relation(fields: [commentId], references: [id])
}